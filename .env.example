# === BASE DE DONNÉES ===
DATABASE_URL=postgresql://user:password@localhost:5432/cleaning_db

# === CACHE REDIS (optionnel) ===
REDIS_URL=redis://localhost:6379/0

# === FIREBASE ===
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# === ENVIRONNEMENT ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# === SÉCURITÉ ===
SECRET_KEY=your-very-long-random-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.yourdomain.com

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# === UPLOADS ===
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# === PAGINATION ===
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# === SCHEDULER ===
ENABLE_SCHEDULER=true

# === EMAIL (pour notifications futures) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cleaning-api.com

# === MONITORING (optionnel) ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === SCALEWAY (pour déploiement) ===
SCALEWAY_ACCESS_KEY=your-access-key
SCALEWAY_SECRET_KEY=your-secret-key
SCALEWAY_PROJECT_ID=your-project-id
SCALEWAY_REGION=fr-par
SCALEWAY_ZONE=fr-par-1